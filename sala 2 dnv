	funcao escrever(cadeia txt){
		inteiro n_d_caract
		caracter carac
		n_d_caract = t.numero_caracteres(txt) -1
		para(inteiro i = 0 ;i <=n_d_caract ;i++  ){
		carac = t.obter_caracter(txt, i)
		escreva(carac)u.aguarde(30)
			
		}
		

		
	}



	

